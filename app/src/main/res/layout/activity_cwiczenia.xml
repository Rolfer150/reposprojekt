<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cwiczenia">

    <Button
        android:id="@+id/cw_rozciaganie"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="100dp"
        android:text="Rozciąganie" >
    </Button>


    <Button
        android:id="@+id/cw_ramiona"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="100dp"
        android:text="Górne partie ciała" >
    </Button>


    <Button
        android:id="@+id/cw_brzuch"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="100dp"
        android:text="Mięśnie brzucha" >
    </Button>

    <Button
        android:id="@+id/cw_nogi"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="100dp"
        android:text="Dolne partie ciała" >
    </Button>

    <Button
        android:id="@+id/cw_krokomierz"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="100dp"
        android:text="Krokomierz" >
    </Button>

</LinearLayout>