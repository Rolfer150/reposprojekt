        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Krok 2: "
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
